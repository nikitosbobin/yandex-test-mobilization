<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nikit.bobin.wordstranslate.activity.translateactivitytabs.TranslationFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/translations_toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            style="@style/Base.ThemeOverlay.AppCompat.Light">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp">

                <com.nikit.bobin.wordstranslate.customviews.LanguageSelectorView
                    android:id="@+id/lang_selector"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/translation_input"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@drawable/card_edit_text"
        android:ems="10"
        android:gravity="bottom"
        android:hint="@string/tap_to_start_translate"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorHint"
        tools:inputType="textMultiLine"
        android:layout_below="@+id/translations_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/current_translation"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/translation_input"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/original_text_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="47dp"
                android:id="@+id/translated_text_label"
                android:layout_below="@+id/original_text_label"
                android:layout_alignStart="@+id/original_text_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:id="@+id/direction_label"
                android:layout_alignBottom="@+id/original_text_label"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="17dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/clear_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="gone"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/clear"
        android:layout_below="@+id/translations_toolbar"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
