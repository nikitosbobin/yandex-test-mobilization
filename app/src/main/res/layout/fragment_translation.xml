<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nikit.bobin.wordstranslate.activity.translateactivitytabs.TranslationFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:inputType="textPersonName"
        android:hint="Text to translate"
        android:elevation="5dp"
        android:textColorHint="@color/colorHint"
        android:gravity="bottom"
        android:ems="10"
        android:background="@drawable/card_edit_text"
        android:id="@+id/editText"
        android:layout_below="@+id/lang_selector"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:inputType="textMultiLine" />

    <ListView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/history_list"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/editText" />

</RelativeLayout>
